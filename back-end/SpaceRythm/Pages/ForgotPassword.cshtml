@page
@model SpaceRythm.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<h1 class="bg-info text-white">Reset password</h1>

<form asp-controller="Users" asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <label>Email</label>
        <input name="email" class="form-control" required />
    </div>
    <a href="/ForgotPasswordConfirmation">Reset password</a>
    <button class="btn btn-primary" type="submit">Send</button> 
</form>

